<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.foodwhips.fragments.IngredientsInfo">

    <LinearLayout
        android:id="@+id/ingredients_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/recipe_details_padding"
                android:textSize="@dimen/recipe_details_textSize" />
        </ScrollView>
    </LinearLayout>

</FrameLayout>
