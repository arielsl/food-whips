<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.foodwhips.activities.RecipeDetailsActivity">

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/detail_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recipe_details_padding"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/template"
        />

    <TextView
        android:id="@+id/detail_time_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recipe_details_padding"
        android:textSize="@dimen/recipe_details_textSize" />

    <TextView
        android:id="@+id/detail_servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recipe_details_padding"
        android:textSize="@dimen/recipe_details_textSize" />

    <TextView
        android:id="@+id/detail_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recipe_details_padding"
        android:textSize="@dimen/recipe_details_textSize" />

    <TextView
        android:id="@+id/detail_source_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recipe_details_padding"
        android:textSize="@dimen/recipe_details_textSize" />

    <TextView
        android:id="@+id/detail_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recipe_details_padding"
        android:textSize="@dimen/recipe_details_textSize" />

</LinearLayout>
