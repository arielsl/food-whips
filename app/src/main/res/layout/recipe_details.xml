    <TextView
        android:id="@+id/detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/detail_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recipe_details_padding"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:paddingBottom="20dp"
        android:src="@drawable/template"
        />


    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_image">
        
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/general_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/detail_time_taken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/recipe_details_padding"
                    android:textSize="@dimen/recipe_details_textSize" />

                <TextView
                    android:id="@+id/detail_servings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/recipe_details_padding"
                    android:textSize="@dimen/recipe_details_textSize" />

                <TextView
                    android:id="@+id/detail_source_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/recipe_details_padding"
                    android:textSize="@dimen/recipe_details_textSize" />

                <TextView
                    android:id="@+id/detail_source_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/recipe_details_padding"
                    android:textSize="@dimen/recipe_details_textSize" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/ingredients_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/detail_ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/recipe_details_padding"
                    android:textSize="@dimen/recipe_details_textSize" />
            </FrameLayout>
        </FrameLayout>

    </TabHost>

